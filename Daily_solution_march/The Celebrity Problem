#include <bits/stdc++.h>
using namespace std;

class Solution {
  public:
    int celebrity(vector<vector<int>>& mat) {
        int n = mat.size();
        stack<int> st;

        // Step 1: Push all persons into stack
        for (int i = 0; i < n; i++) {
            st.push(i);
        }

        // Step 2: Elimination process
        while (st.size() > 1) {
            int a = st.top(); st.pop();
            int b = st.top(); st.pop();

            if (mat[a][b] == 1) {
                // a knows b => a cannot be celebrity
                st.push(b);
            } else {
                // a does not know b => b cannot be celebrity
                st.push(a);
            }
        }

        // Step 3: Verify the last candidate
        int candidate = st.top();

        // Candidate should not know anyone
        for (int i = 0; i < n; i++) {
            if (mat[candidate][i] == 1 && i != candidate) {
                return -1;
            }
        }

        // Everyone should know candidate
        for (int i = 0; i < n; i++) {
            if (mat[i][candidate] == 0 && i != candidate) {
                return -1;
            }
        }

        return candidate;
    }
};
