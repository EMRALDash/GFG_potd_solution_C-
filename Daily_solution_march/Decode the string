class Solution {
  public:
    string decodedString(string &s) {
        stack<int> countStack;
        stack<string> stringStack;
        string currentStr = "";
        int k = 0;
        
        for (char ch : s) {
            if (isdigit(ch)) {
                k = k * 10 + (ch - '0'); // build the full number
            } else if (ch == '[') {
                countStack.push(k);      // save current k
                stringStack.push(currentStr); // save current string
                currentStr = "";         // reset for new segment
                k = 0;
            } else if (ch == ']') {
                int count = countStack.top(); countStack.pop();
                string prevStr = stringStack.top(); stringStack.pop();
                string temp = "";
                for (int i = 0; i < count; ++i) {
                    temp += currentStr;
                }
                currentStr = prevStr + temp;
            } else {
                currentStr += ch;
            }
        }
        return currentStr;
    }
};
