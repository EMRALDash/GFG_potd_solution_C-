#include <vector>
#include <deque>
#include <algorithm>
using namespace std;

class Solution {
  public:
    int maxSubarrSum(vector<int>& arr, int a, int b) {
        int n = arr.size();
        vector<long long> prefix(n + 1, 0);
        for (int i = 0; i < n; ++i)
            prefix[i + 1] = prefix[i] + arr[i];

        deque<int> dq;
        long long maxSum = LLONG_MIN;

        for (int i = a; i <= n; ++i) {
            // Remove indices outside the window [i - b, i - a]
            if (!dq.empty() && dq.front() < i - b)
                dq.pop_front();

            // Insert new index i - a into deque
            int j = i - a;
            while (!dq.empty() && prefix[dq.back()] >= prefix[j])
                dq.pop_back();
            dq.push_back(j);

            // Update max sum using the smallest prefix in the deque
            maxSum = max(maxSum, prefix[i] - prefix[dq.front()]);
        }

        return static_cast<int>(maxSum);
    }
};
