class Solution {
  public:
    string findLargest(vector<int> &arr) {
        // Step 1: Convert integers to strings
        vector<string> nums;
        for (int num : arr) {
            nums.push_back(to_string(num));
        }
        
        // Step 2: Custom comparator for sorting
        sort(nums.begin(), nums.end(), [](string &a, string &b) {
            return a + b > b + a;  // if ab > ba, then a comes first
        });
        
        // Step 3: Concatenate all strings
        string result = "";
        for (string &num : nums) {
            result += num;
        }
        
        // Step 4: Handle case like "0000"
        if (result[0] == '0') return "0";
        
        return result;
    }
};
