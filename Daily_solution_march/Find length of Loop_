class Solution {
  public:
    int lengthOfLoop(Node *head) {
        if (!head || !head->next) return 0; // no loop possible
        
        Node *slow = head, *fast = head;
        
        // Step 1: Detect loop using Floydâ€™s Cycle Detection
        while (fast && fast->next) {
            slow = slow->next;
            fast = fast->next->next;
            
            if (slow == fast) { // loop detected
                // Step 2: Count loop length
                int count = 1;
                Node *temp = slow->next;
                while (temp != slow) {
                    count++;
                    temp = temp->next;
                }
                return count;
            }
        }
        
        // No loop
        return 0;
    }
};
