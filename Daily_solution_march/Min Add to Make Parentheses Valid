class Solution {
  public:
    int minParentheses(string& s) {
        int open_needed = 0;  // Unmatched ')'
        int close_needed = 0; // Unmatched '('

        for (char c : s) {
            if (c == '(') {
                close_needed++; // Need one more ')'
            } else { // c == ')'
                if (close_needed > 0) {
                    close_needed--; // Matches one '('
                } else {
                    open_needed++; // Need one '('
                }
            }
        }

        return open_needed + close_needed;
    }
};
